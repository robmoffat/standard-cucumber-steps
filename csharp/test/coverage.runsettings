<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <DataCollectionRunSettings>
    <DataCollectors>
      <DataCollector friendlyName="Code Coverage" uri="datacollector://Microsoft/CodeCoverage/2.0">
        <Configuration>
          <CodeCoverage>
            <ModulePaths>
              <!-- Only measure the library assembly, not the test runner -->
              <Include>
                <ModulePath>.*StandardCucumberSteps\.dll</ModulePath>
              </Include>
              <Exclude>
                <ModulePath>.*StandardCucumberSteps\.Tests\.dll</ModulePath>
              </Exclude>
            </ModulePaths>
            <Attributes>
              <!-- Exclude auto-generated Reqnroll feature runner code -->
              <Exclude>
                <Attribute>System.CodeDom.Compiler.GeneratedCodeAttribute</Attribute>
                <Attribute>System.Diagnostics.CodeAnalysis.ExcludeFromCodeCoverageAttribute</Attribute>
              </Exclude>
            </Attributes>
          </CodeCoverage>
        </Configuration>
      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>
</RunSettings>
